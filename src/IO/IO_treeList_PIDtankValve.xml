<?xml version="1.0"?>
<Simulation>
    <GeneralControls>
        <Inputs>
            <Digital>
                <!-- PLC Inputs = Simulator Outputs -->
                <Signal description="Start command" type="bool" range="0-1" io_prefix="I" status="FALSE">StartButton</Signal>
                <Signal description="Stop command" type="bool" range="0-1" io_prefix="I" status="FALSE">StopButton</Signal>
                <Signal description="Reset command" type="bool" range="0-1" io_prefix="I" status="FALSE">ResetButton</Signal>
            </Digital>
            <Analog>
                <!-- PLC Inputs = Simulator Outputs -->
                <Signal description="Control slider 1 value" type="int" range="0-32747" io_prefix="I" status="0">ControlSlider1</Signal>
                <Signal description="Control slider 2 value" type="int" range="0-32747" io_prefix="I" status="0">ControlSlider2</Signal>
                <Signal description="Control slider 3 value" type="int" range="0-32747" io_prefix="I" status="0">ControlSlider3</Signal>
            </Analog>
        </Inputs>
        <Outputs>
            <Digital>
                <!-- PLC Outputs = Simulator Inputs -->
                <Signal description="Status indicator 1" type="bool" range="0-1" io_prefix="Q" status="FALSE">StatusLight1</Signal>
                <Signal description="Status indicator 2" type="bool" range="0-1" io_prefix="Q" status="FALSE">StatusLight2</Signal>
                <Signal description="Status indicator 3" type="bool" range="0-1" io_prefix="Q" status="FALSE">StatusLight3</Signal>
                <Signal description="Status indicator 4" type="bool" range="0-1" io_prefix="Q" status="FALSE">StatusLight4</Signal>
            </Digital>
            <Analog>
                <!-- PLC Outputs = Simulator Inputs -->
                <Signal description="Analog value 1" type="int" range="0-32747" io_prefix="Q" status="0">DisplayValue1</Signal>
                <Signal description="Analog value 2" type="int" range="0-32747" io_prefix="Q" status="0">DisplayValue2</Signal>
                <Signal description="Analog value 3" type="int" range="0-32747" io_prefix="Q" status="0">DisplayValue3</Signal>
            </Analog>
        </Outputs>
    </GeneralControls>
    <PIDtankValve_Sensors_Actuators>
        <Inputs>
            <Digital>
                <!-- Tank Level Sensors -->
                <Signal description="Water level is HIGH (above threshold = true)" type="bool" range="0-1" io_prefix="I" status="FALSE">WaterLevelHigh</Signal>
                <Signal description="Water level is LOW (above threshold = true)" type="bool" range="0-1" io_prefix="I" status="FALSE">WaterLevelLow</Signal>
            </Digital>
            <Analog>
                <!-- Tank Measurement Sensors -->
                <Signal description="Current water level in tank (0-100%)" type="int" range="0-27648" io_prefix="I" status="0">WaterLevelMeasurement</Signal>
                <Signal description="Current water temperature (°C)" type="int" range="0-27648" io_prefix="I" status="0">WaterTemperatureMeasurement</Signal>
            </Analog>
        </Inputs>
        <Outputs>
            <Digital>
                <!-- Actuator Controls -->
                <Signal description="Upper inlet valve - Pump water IN (ON/OFF)" type="bool" range="0-1" io_prefix="Q" status="FALSE">InletValveOnOff</Signal>
                <Signal description="Lower outlet valve - Drain water OUT (ON/OFF)" type="bool" range="0-1" io_prefix="Q" status="FALSE">OutletValveOnOff</Signal>
                <Signal description="Heater - Heat the water (ON/OFF)" type="bool" range="0-1" io_prefix="Q" status="FALSE">HeaterOnOff</Signal>
            </Digital>
            <Analog>
                <!-- Actuator Controls -->
                <Signal description="Upper inlet valve position (0-100% open)" type="int" range="0-27648" io_prefix="Q" status="0">InletValvePosition</Signal>
                <Signal description="Lower outlet valve position (0-100% open)" type="int" range="0-27648" io_prefix="Q" status="0">OutletValvePosition</Signal>
                <Signal description="Heater power level (0-100%)" type="int" range="0-27648" io_prefix="Q" status="0">HeaterPowerLevel</Signal>
            </Analog>
        </Outputs>
        </PIDtankValve_Sensors_Actuators>
    <PIDtankValve_PLC_Controls>
        <Inputs>
            <Digital>
                <!-- Control Buttons -->
                <Signal description="Start button - Turn on the valve" type="bool" range="0-1" io_prefix="I" status="FALSE">StartButton</Signal>
                <Signal description="Stop button - Turn off the valve" type="bool" range="0-1" io_prefix="I" status="FALSE">StopButton</Signal>
                <Signal description="Reset button - Reset the valve controller" type="bool" range="0-1" io_prefix="I" status="FALSE">ResetButton</Signal>
                <!-- Mode Switches -->
                <Signal description="Mode: Automatic (controller adjusts valve and coil wattage)" type="bool" range="0-1" io_prefix="I" status="TRUE">AutomaticMode</Signal>
                <Signal description="Mode: Manual (user adjusts valve and coil wattage)" type="bool" range="0-1" io_prefix="I" status="FALSE">ManualMode</Signal>
                <!-- Temperature Control Type -->
                <Signal description="General bit to tell the plc to use analog temperature controls" type="bool" range="0-1" io_prefix="I" status="FALSE">TemperatureAnalogControl</Signal>
                <Signal description="General bit to tell the plc to use digital temperature controls" type="bool" range="0-1" io_prefix="I" status="FALSE">TemperatureDigitalControl</Signal>
                <!-- Water Level Control Type -->
                <Signal description="General bit to tell the plc to use analog valve controls" type="bool" range="0-1" io_prefix="I" status="FALSE">WaterLevelAnalogControl</Signal>
                <Signal description="General bit to tell the plc to use digital valve controls" type="bool" range="0-1" io_prefix="I" status="FALSE">WaterLevelDigitalControl</Signal>
            </Digital>
            <Analog>
                <!-- Control Setpoints -->
                <Signal description="Desired water temperature (-50 to 100°C)" type="int" range="0-27648" io_prefix="I" status="0">TemperatureSetpoint</Signal>
                <Signal description="Desired water level (0-100%)" type="int" range="0-27648" io_prefix="I" status="0">WaterLevelSetpoint</Signal>
            </Analog>
        </Inputs>
        <Outputs>
            <Digital>
            </Digital>
            <Analog>
            </Analog>
        </Outputs>
    </PIDtankValve_PLC_Controls>
</Simulation>