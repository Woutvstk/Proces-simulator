<?xml version="1.0"?>
<Simulation>
    
    <PIDtankValve_Sensors_Actuators>
        <Inputs>
            <Digital>
                <!-- Tank Level Sensors -->
                <Signal description="Water level is HIGH (above threshold = true)" type="bool" range="0-1" io_prefix="I" status="FALSE">Sim_WaterLevelHigh</Signal>
                <Signal description="Water level is LOW (above threshold = true)" type="bool" range="0-1" io_prefix="I" status="FALSE">Sim_WaterLevelLow</Signal>
            </Digital>
            <Analog>
                <!-- Tank Measurement Sensors -->
                <Signal description="Current water level in tank (0-100%)" type="int" range="0-27648" io_prefix="I" status="0">Sim_WaterLevelMeasurement</Signal>
                <Signal description="Current water temperature (°C)" type="int" range="0-27648" io_prefix="I" status="0">Sim_WaterTemperatureMeasurement</Signal>
            </Analog>
        </Inputs>
        <Outputs>
            <Digital>
                <!-- Actuator Controls -->
                <Signal description="Upper inlet valve - Pump water IN (ON/OFF)" type="bool" range="0-1" io_prefix="Q" status="FALSE">Sim_InletValveOnOff</Signal>
                <Signal description="Lower outlet valve - Drain water OUT (ON/OFF)" type="bool" range="0-1" io_prefix="Q" status="FALSE">Sim_OutletValveOnOff</Signal>
                <Signal description="Heater - Heat the water (ON/OFF)" type="bool" range="0-1" io_prefix="Q" status="FALSE">Sim_HeaterOnOff</Signal>
            </Digital>
            <Analog>
                <!-- Actuator Controls -->
                <Signal description="Upper inlet valve position (0-100% open)" type="int" range="0-27648" io_prefix="Q" status="0">Sim_InletValvePosition</Signal>
                <Signal description="Lower outlet valve position (0-100% open)" type="int" range="0-27648" io_prefix="Q" status="0">Sim_OutletValvePosition</Signal>
                <Signal description="Heater power level (0-100%)" type="int" range="0-27648" io_prefix="Q" status="0">Sim_HeaterPowerLevel</Signal>
            </Analog>
        </Outputs>
    </PIDtankValve_Sensors_Actuators>
    <PIDtankValve_PLC_Controls>
        <Inputs>
            <Digital>
                <!-- Control Buttons -->
                <Signal description="Start button" type="bool" range="0-1" io_prefix="I" status="FALSE">Sim_StartButton</Signal>
                <Signal description="Stop button" type="bool" range="0-1" io_prefix="I" status="FALSE">Sim_StopButton</Signal>
                <Signal description="Reset button" type="bool" range="0-1" io_prefix="I" status="FALSE">Sim_ResetButton</Signal>
                <!-- Mode Switches -->
                <Signal description="Mode: Automatic (controller adjusts valve and coil wattage)" type="bool" range="0-1" io_prefix="I" status="TRUE">Sim_AutomaticMode</Signal>
                <Signal description="Mode: Manual (user adjusts valve and coil wattage)" type="bool" range="0-1" io_prefix="I" status="FALSE">Sim_ManualMode</Signal>
                <!-- Temperature Control Type -->
                <Signal description="General bit to tell the plc to use analog temperature controls" type="bool" range="0-1" io_prefix="I" status="FALSE">Sim_TemperatureAnalogControl</Signal>
                <Signal description="General bit to tell the plc to use digital temperature controls" type="bool" range="0-1" io_prefix="I" status="FALSE">Sim_TemperatureDigitalControl</Signal>
                <!-- Water Level Control Type -->
                <Signal description="General bit to tell the plc to use analog valve controls" type="bool" range="0-1" io_prefix="I" status="FALSE">Sim_WaterLevelAnalogControl</Signal>
                <Signal description="General bit to tell the plc to use digital valve controls" type="bool" range="0-1" io_prefix="I" status="FALSE">Sim_WaterLevelDigitalControl</Signal>
            </Digital>
            <Analog>
                <!-- Control Setpoints -->
                <Signal description="Desired water temperature (-50 to 100°C)" type="int" range="0-27648" io_prefix="I" status="0">Sim_TemperatureSetpoint</Signal>
                <Signal description="Desired water level (0-100%)" type="int" range="0-27648" io_prefix="I" status="0">Sim_WaterLevelSetpoint</Signal>
            </Analog>
        </Inputs>
        <Outputs>
            <Digital>
            </Digital>
            <Analog>
            </Analog>
        </Outputs>
    </PIDtankValve_PLC_Controls>
    <GeneralControls>
        <Inputs>
            <Digital>
                <!-- PLC Inputs = Simulator Outputs -->
                <Signal description="General Start command" type="bool" range="0-1" io_prefix="I" status="FALSE">Start</Signal>
                <Signal description="General Stop command" type="bool" range="0-1" io_prefix="I" status="FALSE">Stop</Signal>
                <Signal description="General Reset command" type="bool" range="0-1" io_prefix="I" status="FALSE">Reset</Signal>
            </Digital>
            <Analog>
                <!-- PLC Inputs = Simulator Outputs -->
                <Signal description="General Control slider 1 value" type="int" range="0-27648" io_prefix="I" status="0">Control1</Signal>
                <Signal description="General Control slider 2 value" type="int" range="0-27648" io_prefix="I" status="0">Control2</Signal>
                <Signal description="General Control slider 3 value" type="int" range="0-27648" io_prefix="I" status="0">Control3</Signal>
            </Analog>
        </Inputs>
        <Outputs>
            <Digital>
                <!-- PLC Outputs = Simulator Inputs -->
                <Signal description="General Status indicator 1" type="bool" range="0-1" io_prefix="Q" status="FALSE">Indicator1</Signal>
                <Signal description="General Status indicator 2" type="bool" range="0-1" io_prefix="Q" status="FALSE">Indicator2</Signal>
                <Signal description="General Status indicator 3" type="bool" range="0-1" io_prefix="Q" status="FALSE">Indicator3</Signal>
                <Signal description="General Status indicator 4" type="bool" range="0-1" io_prefix="Q" status="FALSE">Indicator4</Signal>
            </Digital>
            <Analog>
                <!-- PLC Outputs = Simulator Inputs -->
                <Signal description="General Analog value 1" type="int" range="0-27648" io_prefix="Q" status="0">Analog1</Signal>
                <Signal description="General Analog value 2" type="int" range="0-27648" io_prefix="Q" status="0">Analog2</Signal>
                <Signal description="General Analog value 3" type="int" range="0-27648" io_prefix="Q" status="0">Analog3</Signal>
            </Analog>
        </Outputs>
    </GeneralControls>
</Simulation>